{
  "name": "smart-factory-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "cypress run",
    "test:e2e:dev": "cypress open",
    "test:a11y": "pa11y-ci",
    "test:all": "npm run test && npm run test:e2e && npm run test:a11y",
    "prepare": "husky install"
  },
  "dependencies": {
    "@sanity/client": "^6.0.0",
    "@sanity/image-url": "^1.1.0",
    "@sanity/vision": "^3.88.3",
    "next": "15.3.2",
    "next-sanity": "^9.11.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sanity": "^3.88.3",
    "styled-components": "^6.1.18"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cypress": "^13.17.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.2",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.2",
    "pa11y-ci": "^3.1.0",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "jest --bail --findRelatedTests"
    ]
  }
}
